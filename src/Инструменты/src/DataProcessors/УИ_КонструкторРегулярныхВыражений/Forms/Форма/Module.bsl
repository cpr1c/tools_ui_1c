	RegExpLocal.IgnoreCase = Истина;
	RegExpLocal.Pattern = ПолучитьШаблонПараметра();

	Подчиненные = ТД.ПолучитьЭлементы();
	Если RegExpLocal.Test(ТД.Значение) И Подчиненные.Количество() = 0 Тогда
		Подчиненные.Добавить();
	КонецЕсли;
