	КонецПопытки;
	
	стРезультат = Новый Структура("Результат, Параметры", маРезультатЗапроса, ВыполняемыйЗапрос.Параметры);
	Если ЗначениеЗаполнено(АдресРезультатаЗапроса) Тогда
