					массивПредставлений.Добавить("ТаблицаЗначений(" + тзРезультат.Количество()
						+ ")");
				ИначеЕсли ТипЗнч(тзРезультат) = Тип("ХранилищеЗначения") Тогда
					значениеХЗ = тзРезультат.Получить();
