		КонецЕсли;
		ПакетыЗапроса.Добавить(Сред(текстОстаток, 1, индРазделителя - 1));
		текстОстаток = Сред(текстОстаток, индРазделителя + 1);
	КонецЦикла;

	ТекстВыполнения = "";
	индВРезультате = 0;
	Для индПакета = 0 ПО ПакетыЗапроса.Количество() - 1 Цикл
