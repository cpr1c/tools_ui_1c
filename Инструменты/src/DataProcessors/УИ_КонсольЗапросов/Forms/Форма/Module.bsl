				новСтрока.ИндексВРезультате = индВРезультате + 1;
				индВРезультате = индВРезультате + 1;
			КонецЕсли;
		КонецЕсли;
		индВРезультате = индВРезультате + 1;
	КонецЦикла;

	Если мТаблицыЗапроса.Количество() = 0 Тогда
		ПоказатьПредупреждение(, "В запросе не используются временные таблицы!", 60);
