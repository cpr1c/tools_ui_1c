	вРассчитатьКоличествоОбъектовМД(СтрукРазделы);
	
	Для каждого Элем из СтрукРазделы Цикл
		СтрДЗ = СтрокиДЗ.Добавить();
		СтрДЗ.Имя = Элем.Ключ;
		СтрДЗ.Имя = Элем.Ключ + " (" + Элем.Значение + ")";
		СтрДЗ.ВидУзла = "РазделМД";
		СтрДЗ.ТипУзла = 1;
		СтрДЗ.ПолучитьЭлементы().Добавить();
